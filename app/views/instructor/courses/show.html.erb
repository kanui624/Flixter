<br />
<div class="booyah-box col-10 offset-1">
<br />
  <h1 class="text-center"><%= current_course.title %></h1>
  <div align="center">
    <%= image_tag @course.image.url, class: 'img-fluid' %>
  </div>
  <br />
  <div class="text-center">
    <%= link_to 'Add New Section', new_instructor_course_section_path(current_course), class: 'btn btn-secondary btn-xs' %>
  </div>

  <br class="clr" />
  <div align="center">
    <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-secondary' %>
  </div>
<br />

    <ul>
      <% current_course.sections.each do |section| %>
        <li>
          <%= section.title %>
          <br />
          <ul>
            <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'float-right btn btn-secondary btn-sm' %>
        <br class="clr" />
      </li>
    <% end %>
  </ul>

</div>