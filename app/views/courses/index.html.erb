<br />

<div class="booyah-box col-10 offset-1">
  <br />
  <h1 class="text-center">Learn Today</h1>
  <hr />

<% @courses.each do |course| %>
  <h2 class="text-center">
    <%= link_to course.title, course_path(course) %></h2>
    <div align="center">
      <%= image_tag course.image.url, class: 'img-fluid' %>
    </div>
  <br />
  <div class="row">
    <div class="col-sm-8 col-12">
      <%= course.description %>
    </div>
    <br />
    <div class="col-sm-4 col-12 text-center">
      <%= link_to 'More Details', course_path(course) , class: 'btn btn-secondary btn-sm' %>
    </div>
  </div>
<br class="clr" />
<% end %> 